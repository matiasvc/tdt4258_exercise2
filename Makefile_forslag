# Example Makefile
#
# Exercise 2, TDT4258

target_baseline=ex2.o
target_improved=ex2.o
for_all_targets=timer.o dac.o gpio.o interrupt_handlers.o audioMixer.o
binary_output_name=ex2.bin

CC=arm-none-eabi-gcc
LD=arm-none-eabi-gcc
OBJCOPY=arm-none-eabi-objcopy

CFLAGS=-mcpu=cortex-m3 -mthumb -g -std=c99 -Wall
LDFLAGS=-mcpu=cortex-m3 -mthumb -g -lgcc -lc -lcs3 -lcs3unhosted -lefm32gg -Llib -lm
ASFLAGS=-mcpu=cortex-m3 -mthumb -g
LINKERSCRIPT=lib/efm32gg.ld

baseline : baseline.elf
	@echo "Creating Baseline Binary File"
	${OBJCOPY} -O binary $< $(binary_output_name)

improved : improved.elf
	@echo "Creating Improved Binary File"
	${OBJCOPY} -O binary $< $(binary_output_name)

baseline.elf : $(target_baseline) $(for_all_targets)
	@echo "Linking Baseline Solution"
	${LD} -T ${LINKERSCRIPT} $^ -o $@ ${LDFLAGS}

improved.elf : $(target_improved) $(for_all_targets)
	@echo "Linking Improved Solution"
	${LD} -T ${LINKERSCRIPT} $^ -o $@ ${LDFLAGS}

%.o : %.c
	${CC} ${CFLAGS} -c $< -o $@

.PHONY : pretty
pretty :
	-indent *.c *.h

.PHONY : upload
upload :
	-eACommander.sh -r --address 0x00000000 -f "$(binary_output_name)" -r

.PHONY : clean
clean :
	-rm -rf *.o *.elf *.bin *.hex
